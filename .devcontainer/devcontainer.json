{
    "name": "BaseAPI Starter",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "forwardPorts": [
        7879
    ],
    "remoteEnv": {
        "APP_HOST": "0.0.0.0",
        "APP_PORT": "7879",
        "DB_DRIVER": "sqlite",
        "DB_DATABASE": "/workspaces/base-api-template/database.sqlite"
    },
    "postCreateCommand": "composer install && touch /workspaces/base-api-template/database.sqlite"
}

